<body style="background: url(img/bg1.png) no-repeat center center scroll; background-size: cover;">
<div class="row">
<div class="col-md-4 col-md-offset-4">
<fieldset>

<a id = "name" href="/form" class="form-horizontal" role="form"> </a> 
<h2>Found Item Form</h2>


<form action='/form' method='POST'>

<div class="form-group">
		<label class="control-label" for="textinput">
     &nbsp;&nbsp;&nbsp;&nbsp;First Name: </label>
    <div class="col-sm-10">
  <input id="fname" type="text" name="firstname" class= "form-control" placeholder="Aamir">
</div>
</div>

<div class="form-group">
  <label class="control-label" for="textinput">
     &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Last Name: </label>
     <div class="col-sm-10">
  <input id="lname" type="text" name="lastname" class="form-control" placeholder="Khan">
  </div>
  </div>

  <div class="form-group">
  <label class=" control-label" for="textinput">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Email Address: </label>
 <div class="col-sm-10">
  <input id="email" type="text" name="email" class="form-control" placeholder="ak@whitehouse.com">
  </div>
  </div>




<div class="form-group">
 <label class="control-label" for="textinput">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Phone Number: </label>
  <div class="col-sm-10">
  <input id="ph" type="text" name="phone" class="form-control" placeholder="123-212-1212">
  </div>
  </div>

  <div class="form-group">
 <label class="control-label" for="textinput">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Borough of Residence: </label>
  <div class="col-sm-10">
  <input id="burr" type="text" name="burr" class="form-control" placeholder="Queens">
  </div>
  </div>

 <div class="form-group">
 <label class="control-label" for="textinput">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;City of Residence: </label>
  <div class="col-sm-10">
   <input id="city" type="text" name="city" class="form-control" placeholder="NYC">
  </div>
  </div>

<div class="form-group">
 <label class="control-label" for="textinput">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Item Description: </label>
  <div class="col-sm-10">
   <input id="item" type="text" name="itemdesc" class="form-control" placeholder="I found a lost wallet on the F Train its brown." style="height: 60px"> 

  </div>
  </div>

  
<div class = "form-group">
  <div class = "col-sm-offset-2 col-sm-10">
  <input class= "btn btn-primary" id="submit" type="submit" style="margin:10px" value="Submit">
  <input class= "btn btn-default" id="submit" type="submit"  value="Go Back">
  </div>
  </div>
  
  
</form>
</div>
</div>
